<p><h1>New Game</h1></p>

<ul class="d-flex">
<% @letters.each do |letter| %>
    <li class="border border-dark p-4 m-4 list-group-item bg-primary text-white"> <%= letter %> </li>
    <% end %>
</ul>

<form action="/score" method="post">
<%= hidden_field_tag :authenticity_token, form_authenticity_token %>

 <label class="input-group m-3">What is the longest word you can find?</label>
<div class="input-group p-3">
  <input type="text" class="form-control" aria-describedby="basic-addon2" name="word">
  <div class="input-group-append">
    <button class="btn btn-outline-secondary" type="submit">Play</button>
  </div>
</div>

</form>